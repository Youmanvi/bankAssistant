# AI Banking Assistant - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# OpenAI Configuration
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk_test_your_key_here
OPENAI_MODEL=gpt-4

# ============================================================================
# Retell AI Configuration
# ============================================================================
# Get your API key from: https://retellai.com
RETELL_API_KEY=your_retell_api_key_here
RETELL_API_BASE=https://api.retellai.com

# ============================================================================
# Pinata/IPFS Configuration (Optional)
# ============================================================================
# Get your credentials from: https://pinata.cloud
PINATA_API_KEY=your_pinata_key_here
PINATA_SECRET_KEY=your_pinata_secret_here

# ============================================================================
# Server Configuration
# ============================================================================
# Host and port for the FastAPI server
APP_HOST=0.0.0.0
APP_PORT=8000

# Enable debug mode (set to false in production)
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# Frontend Configuration
# ============================================================================
# URL for the frontend (used for CORS if needed)
FRONTEND_URL=http://localhost:3000

# ============================================================================
# Database Configuration
# ============================================================================
# For future use with PostgreSQL or other databases
# DATABASE_URL=postgresql://user:password@localhost/bankassistant

# ============================================================================
# Redis Configuration (Optional)
# ============================================================================
# For caching and session management
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Environment Name
# ============================================================================
# One of: development, staging, production
ENVIRONMENT=development

# ============================================================================
# Application Settings
# ============================================================================
# Max concurrent calls
MAX_CONCURRENT_CALLS=100

# Request timeout in seconds
REQUEST_TIMEOUT=30

# ============================================================================
# Security Settings (Production)
# ============================================================================
# These should be enabled in production
# ENABLE_HTTPS=true
# ENABLE_AUTHENTICATION=true
# API_KEY_REQUIRED=true
# CORS_ORIGINS=https://yourdomain.com
